<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.HZFinger_FpStdSample"
    android:versionCode="1"
    android:versionName="1.0" > <!-- SDK版本设置 -->
    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="34" />

    <!-- 硬件特性声明 -->
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <!-- 普通应用可用的权限 -->
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.NFC" />

    <permission
        android:name="com.HZFinger_FpStdSample.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.HZFinger_FpStdSample.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" /> <!-- 仅系统应用可用的权限（已移除） -->
    <!--
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" tools:remove="true"/>
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" tools:remove="true"/>
    <uses-permission android:name="android.permission.SET_DEBUG_APP" tools:remove="true"/>
    -->
    <application
        android:name="com.HZFinger_FpStdSample.MyApplication"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.HZFinger_FpStdSample.HZFinger_FpStdSample"
            android:exported="true" > <!-- android:screenOrientation="portrait"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.HZFinger_FpStdSample.PersonManagementActivity"
            android:label="人员信息管理" >
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.HZFinger_FpStdSample.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>